<Window x:Class="WPFCommandsDemo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCommandsDemo2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="55" Margin="285,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Text="{Binding MessageText, Mode=OneWayToSource}"/>
        <Button Content="메세지 보여주기" HorizontalAlignment="Left" Margin="285,278,0,0" VerticalAlignment="Top" Width="180" Height="70" Command="{Binding DisplayMessageCommand}"/>


    </Grid>
</Window>
